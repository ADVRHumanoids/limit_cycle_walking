clear all; clc;

handle1 = plot(0,0); grid on; hold on;
handle2 = plot(0,0); grid on; hold on;

xlim([-5 15]);
ylim([-5 15]);

l = 2;
for i = 1:0.01:100 
 xLink1_1 = i;
 yLink1_1 = 1/i;
 
 xLink1_2 = i + l;
 yLink1_2 = 1/i + l;
 
 x21 = xLink1_1;
 y21 = yLink1_1;
 yLink1_2 = sin(i) +l;
 y22 = cos(i) +l;
 
 x_points1 = [xLink1_1 xLink1_2]; %
 y_points1 = [yLink1_1 yLink2]; %
 
 x_points2 = [x21 yLink1_2]; %
 y_points2 = [y21 y22]; %
 
 set(handle1,'xdata',x_points1,'ydata',y_points1);
 set(handle2,'xdata',x_points2,'ydata',y_points2);
 drawnow;
 
end
hold off;


